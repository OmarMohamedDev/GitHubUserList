<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardview_bottom_margin"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_standard_dimension"
            android:layout_height="@dimen/avatar_standard_dimension"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/avatar_margin" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/text_margin"
            android:layout_toRightOf="@id/avatar"
            android:textAppearance="?android:attr/textAppearanceListItem" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
